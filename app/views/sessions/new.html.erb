<h1> Login Page </h1>


<%= form_with url:signin_path do |form| %>
    
    <div class="mb-3">
    <%= form.label:Email %>
    <%= form.text_field :email, class: "form-control", placeholder: "abc@xyz.com"  %>
    </div>

    <div class="mb-3">  
    <%= form.label:Password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <%= link_to "Forgot your password?", reset_password_path %>

    <%= form.submit "Login", class: "mb-3 form-control btn btn-primary" %>

<% end %>