<h1> Signup Page </h1>


<%= form_with model: Current.user, url:signup_path do |form| %>
    
    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
        </div>
    <% end %>
    
    <div class="mb-3">
    <%= form.label:Email %>
    <%= form.text_field :email, class: "form-control", placeholder: "abc@xyz.com"  %>
    </div>

    <div class="mb-3">  
    <%= form.label:Password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="mb-3">
    <%= form.label:Confirm_Password %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Retype password" %>
    </div>
    <%= form.submit "Signup User" %>

<% end %>